import java.util.Scanner;

public class salarybonus {
  public static void main(String[] args) {
  
    Scanner sc = new Scanner(System.in);
    int salary = sc.nextInt();
    
    if (salary>10000){
      System.out.println(salary+2000);
    }
    else {
      System.out.println(salary+1000);      
      
    }
  }
}
